body
	padding: 50px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	background-color: white

a
	color: #00B7FF

.logoHeader
	margin-bottom: 20px
	text-align: center

.logoHeader > img
	width: 400px

#infiniteScrollTrigger
	background-color: silver
	border-radius: 50px
	left: 20%
	right: 20%
	text-align: center
	height: 24px
	padding-top: 4px
	padding-bottom: 4px
	margin-top: 24px

#infiniteScrollTrigger:hover
	background-color: darkgray

.link
	padding-top: 5px
	padding-bottom: 5px

.postPicture
	width: 100%
	padding-top: 5px

button
	background-color: #78bfe5
	border-width: 1px
	border-style: solid
	border-radius: 3px
	height: 32px
	margin: 4px
	color: white
	border-color: black
	min-width: 75px

#urlBox
	border-radius: 2px
	border-style: solid
	border-width: 1px
	border-color: silver
	height: 25px
	width: 80%
	margin-bottom: 10px