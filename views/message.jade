extends layout

block content
	.logoHeader
		a(href="/")
			img(src="/images/alghayma-logo.png", width="400")
	br
	div.message-box
		| #{message}
		br
		br
		- if (goHome)
			a(href="/")
				button.button-blue#backButton Home
		- else
			button.button-blue#backButton Back
			script.
				backButton.onclick = function(){
					window.history.back();
				};
